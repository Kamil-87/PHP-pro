{% extends 'layouts/main.twig' %}

{% block content %}

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <input type="text" name="name" placeholder="Название">
        </div>
        <div class="form-group">
            <input type="text" name="price" placeholder="Цена">
        </div>
        <div class="form-group">
            <label for="exampleFormControlFile">Фото:</label>
            <input type="file" name="image" class="form-control-file" id="exampleFormControlFile">
        </div>

        <div class="form-group">
            <label for="exampleFormControlTextarea">Описание:</label><br>
            <textarea name="description" class="form-control" id="exampleFormControlTextarea" rows="4" placeholder="Описание"></textarea>
        </div>

        <button type="submit">Добавить</button>
    </form>

{% endblock %}
